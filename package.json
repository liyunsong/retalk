{
  "name": "retalk",
  "version": "1.2.0",
  "description": "Redux never so simple",
  "keywords": [
    "react",
    "flux",
    "redux",
    "retalk"
  ],
  "license": "MIT",
  "author": "nanxiaobei <nanxiaobei@gmail.com> (https://github.com/nanxiaobei)",
  "homepage": "https://github.com/nanxiaobei/retalk",
  "repository": "github:nanxiaobei/retalk",
  "bugs": "https://github.com/nanxiaobei/retalk/issues",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "pretty": "prettier --write '{src,test}/**/*.js' .babelrc.js rollup.config.js '**/*.md'",
    "clean": "rimraf lib es",
    "build:commonjs": "cross-env NODE_ENV=cjs rollup -c -o lib/index.js",
    "build:es": "cross-env NODE_ENV=esm rollup -c -o es/index.js",
    "build": "npm run clean && npm run build:commonjs && npm run build:es",
    "test": "jest",
    "coverage": "codecov"
  },
  "dependencies": {
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/runtime": "^7.2.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.4",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-eslint": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testURL": "http://localhost",
    "testRegex": "(/test/.*\\.test.js)$",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
